SQL EXERCISE 03

===================================================================

Q1)
select concat(upper (substr(Sname,1,1)),lower(substr(Sname,2,8)))from S;

----------------------------------------------------------------------
Q2)
 select upper (Sname) from S;

----------------------------------------------------------------------
Q3)
 select lower(Sname) from S;
----------------------------------------------------------------------
Q4)

select lpad(Sname,25,' ') from S;
----------------------------------------------------------------------
Q5)
select replace(Sname,'la','ro') from S;
----------------------------------------------------------------------
Q6)
select replace(Sname,'i','r') and(Sname,'a','o') from S;
----------------------------------------------------------------------
Q7)
SELECT Sname,length(Sname) from S;


----------------------------------------------------------------------
Q8)

select * from S where soundex Sname= soundex 'block'; 
----------------------------------------------------------------------
Q9)
select Sname,Status from S order by Status;

----------------------------------------------------------------------
Q10)
select dayname(sysdate()) from dual;
select distinct  dayname(sysdate()) from S;
